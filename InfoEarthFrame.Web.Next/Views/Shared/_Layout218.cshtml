<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>{{LangConfig.CommonText.systemName}} - {{LangConfig.HomeText.main}}</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <link rel="stylesheet" href="@Url.Content("~/Content/layuiadmin/layui/css/layui.css")" media="all">
    <link rel="stylesheet" href="@Url.Content("~/Content/layuiadmin/style/admin.css")" media="all">
    <style > 
        .scrollbar {
        overflow-y: auto;
    }

    .scrollbar::-webkit-scrollbar {
        width: 6px;
        background-color: rgba(217,217,217,0.3);
    }

    .scrollbar::-webkit-scrollbar-thumb {
        background-color: rgba(217,217,217,0.3);
        border-radius: 6px;
    }

    .scrollbar::-webkit-scrollbar-track {
        -webkit-box-shadow: inset 0 0 6px rgba(217,217,217,0.3);
        background-color: #fff;
    }

    </style >
     @Html.Partial("_ConfigLayout")
</head>
<body class="layui-layout-body">

    <div id="LAY_app">
        <div class="layui-layout layui-layout-admin" id="app">
            <div class="layui-header">
                <!-- 头部区域 -->
                <ul class="layui-nav layui-layout-left">
                    <li class="layui-nav-item layadmin-flexible" lay-unselect>
                        <a href="javascript:;" layadmin-event="flexible" v-bind:title="LangConfig.HomeText.sideSlip">
                            <i class="layui-icon layui-icon-shrink-right" id="LAY_app_flexible"></i>
                        </a>
                    </li>
                </ul>
                <ul class="layui-nav layui-layout-right" lay-filter="layadmin-layout-right">
