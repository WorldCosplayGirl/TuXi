                                <i class="layui-icon layui-icon-upload-drag"></i>
                                <cite>{{LangConfig.HomeText.dataManage}}</cite>
                            </a>
                        </li>
                        <li data-name="dataEdit" class="layui-nav-item">
                            <a href="javascript:;" lay-href="@Url.Action("index", "dataEditor")" v-bind:lay-tips="LangConfig.HomeText.dataEdit" lay-direction="2">
                                <i class="layui-icon layui-icon-edit"></i>
                                <cite>{{LangConfig.HomeText.dataEdit}}</cite>
                            </a>
                        </li>
                        <li data-name="themeMapping" class="layui-nav-item">
                            <a href="javascript:;" lay-href="@Url.Action("index", "thematicMapping")" v-bind:lay-tips="LangConfig.HomeText.themeMapping" lay-direction="2">
                                <i class="layui-icon layui-icon-theme"></i>
                                <cite>{{LangConfig.HomeText.themeMapping}}</cite>
                            </a>
                        </li>
                        <li data-name="publishSystem" class="layui-nav-item">
                            <a href="javascript:;"   v-bind:lay-tips="LangConfig.HomeText.publishSystem" lay-direction="2">
                                <i class="layui-icon">&#x1005;</i>
                                <cite>{{LangConfig.HomeText.publishSystem}}</cite>
                            </a>
                            <dl class="layui-nav-child">
                                <dd>
                                    <a lay-href="@Url.Action("basicInfo", "publishSystem")">{{LangConfig.CommonText.basicInfo}}</a>
                                </dd>
                                <dd>
                                    <a lay-href="@Url.Action("Countory", "publishSystem")">{{LangConfig.CommonText.countory}}</a>
