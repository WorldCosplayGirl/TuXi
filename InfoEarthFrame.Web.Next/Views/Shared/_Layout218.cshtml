    <script src="@Url.Content("~/Content/lang/lang." + UserConfigContext.CurrentLang + ".js")"></script>
    <script src="@Url.Content("~/Content/vue/vue.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery-1.8.2.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.cookie.js")"></script>
    <script src="@Url.Content("~/Content/layuiadmin/layui/layui.js")"></script>
    <script src="@Url.Content("~/Content/js/app.base.js")"></script>
    <script src="@Url.Content("~/Content/js/ajax.ext.js")"></script>
    <script src="@Url.Content("~/Content/js/layui.ext.js")"></script>
    <script>


        var vm = new Vue({
            el: '#app',
            data: {
                LangConfig: LangConfig
            },
            created: function () {
                var title = document.getElementsByTagName("title")[0].innerText;
                document.getElementsByTagName("title")[0].innerText = title.replace("{{LangConfig.CommonText.systemName}}", LangConfig.CommonText.systemName).replace("{{LangConfig.HomeText.main}}", LangConfig.HomeText.main)
            }
        });

        layui.initModule([],function () {
           
        });
     
        $(function () {
            $("#sysLogout").click(function () {

                top.location.href = "@Url.Action("logout","account")";
            });

            $("#changeLang").click(function () {
                confirm(LangConfig.CommonText.changeLanguage, function () {
                    $.post({
                        url: "@Url.Action("ChangeLang","Base")",
                        success: function (resp) {
                            if (resp.code == 0) {
                                top.location.reload();
                            }
                        }
                    });
                })
            });
        })
    </script>
</body>
</html>
