                        <a href="javascript:;" layadmin-event="theme" v-bind:title="LangConfig.CommonText.theme">
                            <i class="layui-icon layui-icon-theme"></i>
                        </a>
                    </li>
                    <li class="layui-nav-item layui-hide-xs" lay-unselect>
                        <a href="javascript:;" layadmin-event="fullscreen" v-bind:title="LangConfig.CommonText.screen">
                            <i class="layui-icon layui-icon-screen-full"></i>
                        </a>
                    </li>
                    <li class="layui-nav-item" lay-unselect>
                        <a href="javascript:;">
                            <cite>@UserIdentityContext.CurrentUserName</cite>
                        </a>
                        <dl class="layui-nav-child">
                            <dd><a lay-href="@Url.Action("userbaseinfo", "SystemManage")">{{LangConfig.HomeText.baseInfo}}</a></dd>
                            <dd><a lay-href="@Url.Action("Changepassword", "Account")">{{LangConfig.HomeText.changePassword}}</a></dd>
                            <dd id="sysLogout" style="text-align: center;cursor:pointer"><a>{{LangConfig.HomeText.logout}}</a></dd>
                        </dl>
                    </li>

                    <li class="layui-nav-item layui-hide-xs" lay-unselect>
                        <a href="javascript:;" layadmin-event="about"><i class="layui-icon layui-icon-more-vertical"></i></a>
                    </li>
                    <li class="layui-nav-item layui-show-xs-inline-block layui-hide-sm" lay-unselect>
                        <a href="javascript:;" layadmin-event="more"><i class="layui-icon layui-icon-more-vertical"></i></a>
                    </li>
                </ul>
            </div>

            <!-- 侧边菜单 -->
            <div class="layui-side layui-side-menu">
                <div class="layui-side-scroll">
                    <div class="layui-logo" lay-href="home/console.html">
                        <span>{{LangConfig.CommonText.systemName}}</span>
                    </div>

                    <ul class="layui-nav layui-nav-tree" lay-shrink="all" id="LAY-system-side-menu" lay-filter="layadmin-system-side-menu">
                        <li data-name="index" class="layui-nav-item layui-nav-itemed">
                            <a href="javascript:;" lay-href="@Url.Action("main","home")" v-bind:lay-tips="LangConfig.HomeText.index" lay-direction="2">
                                <i class="layui-icon layui-icon-home"></i>
                                <cite>{{LangConfig.HomeText.index}}</cite>
                            </a>
                        </li>
                        @*<li data-name="layerManage" class="layui-nav-item">
                            <a href="javascript:;" lay-href="@Url.Action("index","layerManager")" v-bind:lay-tips="LangConfig.HomeText.layerManage" lay-direction="2">
                                <i class="layui-icon layui-icon-layer"></i>
                                <cite>{{LangConfig.HomeText.layerManage}}</cite>
                            </a>
                        </li>
                        <li data-name="mapManage" class="layui-nav-item">
                            <a href="javascript:;" lay-href="@Url.Action("index", "mapManager")" v-bind:lay-tips="LangConfig.HomeText.mapManage" lay-direction="2">
                                <i class="layui-icon layui-icon-location"></i>
                                <cite>{{LangConfig.HomeText.mapManage}}</cite>
                            </a>
                        </li>
                        <li data-name="styleManage" class="layui-nav-item">
                            <a href="javascript:;" lay-href="@Url.Action("index", "styleManager")" v-bind:lay-tips="LangConfig.HomeText.styleManage" lay-direction="2">
                                <i class="layui-icon layui-icon-layouts"></i>
                                <cite>{{LangConfig.HomeText.styleManage}}</cite>
                            </a>
                        </li>*@
