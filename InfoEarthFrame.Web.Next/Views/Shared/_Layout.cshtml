    <script>

        $.get({
            url: Base.getApiUrl('/Account/GetPermession'),
            async: false,
            success: function (resp) {
                if (resp.code == 0) {
                    var html = '';
                    $.each(resp.data, function (index, element) {
                        if ((element.Menus && element.Menus.length > 0) || (element.Children && element.Children.length > 0)) {
                            var onlyOne = element.Menus.length == 1 && element.Menus[0].Name == element.Name;
                            if (onlyOne) {
                                var current = element.Menus[0];
                                html += ["<li data-name=\"" + current.Name + "\" class=\"layui-nav-item\">",
    "                            <a href=\"javascript:;\" lay-href=\"" + current.Url + "\" lay-tips=\"" + current.Name + "\" lay-direction=\"2\">",
    "                                <i class=\"layui-icon " + element.Icon + "\"></i>",
    "                                <cite>" + current.Name + "</cite>",
    "                            </a>",
    "                        </li>"].join("");
                            }
                            else {
                                var current = element;
                                html += ["       <li data-name=\"" + current.Name + "\" class=\"layui-nav-item\">",
    "                            <a href=\"javascript:;\"  lay-tips=\"" + current.Name + "\" lay-direction=\"2\">",
  "                                <i class=\"layui-icon " + current.Icon + "\"></i>",
    "                                <cite>" + current.Name + "</cite>",
    "                            </a>",
                                "<dl class=\"layui-nav-child\">",
    "               "].join("");
                                var childModules = current.Children;
                                if (childModules.length > 0) {
                                    for (var i = 0, length = childModules.length; i < length; i++) {
                                        var childModule = childModules[i];
                                        if (childModule) {
                                            html += "<dd data-name=\"layer\"><a href=\"javascript:;\">" + childModule.Name + "<span class=\"layui-nav-more\"></span></a>";
                                            var hasMenu = childModule.Menus.length > 0;
                                            if (hasMenu) {
                                                html += "                  <dl class=\"layui-nav-child\">  ";
                                                for (var j = 0, length = childModule.Menus.length; j < length; j++) {
                                                    html += ["                    <dd data-name=\"list\"> ",
          "                      <a lay-href=\"" + childModule.Menus[j].Url + "\">" + childModule.Menus[j].Name + "</a> ",
          "                    </dd> "].join("");
                                                }
                                                html += "                  </dl>  ";
                                            }
                                            html += "</dd>";
                                        }
                                    }
                                }

                                for (var i = 0, length = current.Menus.length; i < length; i++) {
                                    html += ["<dd>",
                                "                                    <a lay-href=\"" + current.Menus[i].Url + "\">" + current.Menus[i].Name + "</a>",
                                "                                </dd>",
                                    "               "].join("");
                                }


                                html += "</dl></li>";

                            }
                        }
                    });

                    $("#LAY-system-side-menu").append(html);
                }
            }
        });


        var vm = new Vue({
            el: '#app',
            data: {
