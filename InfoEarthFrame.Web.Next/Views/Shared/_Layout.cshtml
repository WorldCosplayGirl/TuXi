        layui.initModule(['element','table'], function () {
            layui.element.on('tab(layadmin-layout-tabs)', function (data) {
                    var url = data.elem.find("li.layui-this").attr("lay-attr");
                    for (var i = 0, length = window.frames.length; i < length; i++) {
                        var current = window.frames[i];
                        if (current.location.href.toLowerCase().indexOf("usergrouppermession")>=0)
                        {
                            continue;
                        }
                        if (current.location.href.indexOf(url) >= 0)
                        {
                            try {
                                current.initGrid();
                            } catch (e) {

                            }
                            try {
                                current.initGrid1();
                            } catch (e) {

                            }
                        }
                    }
            });
        });

